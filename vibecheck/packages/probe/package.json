{
  "name": "vibecheck-score",
  "version": "0.4.1",
  "description": "Read-only local scanner for AI coding setups. Checks config files, tool presence, and git metadata. No network calls during scan. Open source.",
  "type": "module",
  "bin": {
    "vibecheck": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.3.0"
  },
  "scripts": {
    "build": "node build.mjs",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brklyngg/vibe-coding-score.git"
  },
  "bugs": {
    "url": "https://github.com/brklyngg/vibe-coding-score/issues"
  },
  "homepage": "https://vibecheck.crunchy.tools",
  "keywords": [
    "vibe-coding",
    "ai-coding",
    "developer-tools",
    "assessment",
    "claude-code",
    "mcp"
  ],
  "author": "Gary Gurevich",
  "license": "MIT",
  "devDependencies": {
    "@vibe/scoring": "*",
    "@types/node": "^22.10.0",
    "chalk": "^5.4.1",
    "esbuild": "^0.27.3",
    "ora": "^8.1.1",
    "typescript": "^5.7.3"
  }
}
